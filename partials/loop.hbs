{{#foreach posts}}
<article class="{{post_class}} site-width">
  <header>
    <h2><a href="{{url}}">{{{title}}}</a></h2>
  </header>
  <div>
    <p>{{excerpt words="40"}} <a class="read-more" href="{{url}}"> Read more&raquo;</a></p>
  </div>
  <footer>
    {{#if primary_author.profile_image}}
    <figure class="desktop">
      <img src="{{primary_author.profile_image}}" alt="{{primary_author.name}}" class="border circle" />
    </figure>
    {{/if}}
    <div>
      {{authors}}
      {{tags prefix=" on "}}
      <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time>
    </div>
  </footer>
</article>
{{/foreach}}

{{pagination}}

<header class="main-header blog {{#if @site.cover_image}}cover" style="background-image: url({{@site.cover_image}}){{else}}lazy-cover-loader no-cover{{/if}}">
  <nav class="site-width">
    {{#if @site.logo}}<a href="{{@site.url}}"><img src="{{@site.logo}}" alt="Blog Logo" /></a>{{/if}}
    <h1 class="blog-title"><a href="{{@site.url}}">{{@site.title}}</a></h1>
    <h3 class="blog-description">{{@site.description}}</h3>

    {{!> "social"}}
  </nav>

  <aside class="scroll-down">
    <i class="fa fa-chevron-down"></i>&nbsp;&nbsp;Scroll down to read the blog&nbsp;&nbsp;<i class="fa fa-chevron-down"></i>
  </aside>
</header>
